@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <p class="my-0 mx-2">Welcome to the Generously Indexed Bibliography of Lovely Eats</p>
            <a class="btn-link my-0 mx-2" href="sign-in">Sign In</a>
            <a class="btn-link my-0 mx-2" href="register">Click here to sign up</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

