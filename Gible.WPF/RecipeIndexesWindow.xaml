<Window x:Class="Gible.WPF.RecipeIndexesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gible.WPF"
        mc:Ignorable="d"
        Title="RecipeIndexesWindow" Height="450" Width="271" Name="RecipeIndexes" Loaded="RecipeIndexes_Loaded">
    <Grid>
        <TextBox Name="AddIndexTextBox" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153" GotFocus="AddIndexTextBox_GotFocus"/>
        <Button Name="AddIndexButton" Content="Add Index" Margin="168,10,10,0" Click="AddIndexButton_Click" Height="26" VerticalAlignment="Top"/>
        <ListBox Name="RecipeIndexesListBox" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" Width="222" Margin="0,41,0,0"/>
    </Grid>
</Window>
